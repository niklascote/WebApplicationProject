<?xml version="1.0" encoding="UTF-8"?>
<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces" 
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
               xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">
                      
    <url-mapping id="home"> 
        <pattern value="/" /> 
        <view-id value="/index.xhtml" />
    </url-mapping> 
    
    <url-mapping id="calendar">
        <pattern value="/calendar" />
        <view-id value="/schedule/scheduleView.xhtml" />
    </url-mapping>
    
    <url-mapping id="eventview">
        <pattern value="/calendar/event" />
        <view-id value="/schedule/eventView.xhtml" />
    </url-mapping>
    
    <url-mapping id="updateeventview">
        <pattern value="/calendar/event/update" />
        <view-id value="/schedule/eventView.xhtml?update=true" />
    </url-mapping>
    
    <url-mapping id="addeventview">
        <pattern value="/calendar/event/add" />
        <view-id value="/schedule/eventView.xhtml?update=false" />
    </url-mapping>
    
    <url-mapping id="edit-calendar">
        <pattern value="/calendar/editView/#{id}"/> 
        <view-id value="/calendar/editView.xhtml?id=#{id}" />
    </url-mapping>
    
</pretty-config>    